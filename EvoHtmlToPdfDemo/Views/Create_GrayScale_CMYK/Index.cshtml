
@{
    ViewBag.Title = "Convert HTML to GrayScale and CMYK PDF Documents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    TreeView_ToggleNode("demoTreeView_PDF_Color_Spaces");
    TreeView_SelectNode("demoTreeView_Create_GrayScale_CMYK");
</script>

@using (Html.BeginForm("ConvertHtmlToPdf", "Create_GrayScale_CMYK", FormMethod.Post))
{
