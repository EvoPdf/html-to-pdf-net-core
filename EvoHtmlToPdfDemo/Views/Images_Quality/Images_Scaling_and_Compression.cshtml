                                                                <td>
                                                                    <input id="imagesScalingCheckBox" type="checkbox" name="imagesScalingCheckBox"><label for="imagesScalingCheckBox">Images Scaling Enabled</label>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td style="height: 20px"></td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    <input type="submit" name="convertToPdfButton" value="Convert HTML to PDF" id="convertToPdfButton">
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </td>
                                            </tr>
                                        </tbody>
