
@{
    ViewBag.Title = "Set Initial Zoom Level of the Generated PDF Document";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function toggleZoomPanel(selectedAction) {
        var enablePanel = selectedAction == "X, Y and Zoom";
        var delayPanel = document.getElementById("zoomLevelPanel");

        if (enablePanel) {
            delayPanel.style.display = "block";
        }
        else {
            delayPanel.style.display = "none";
        }
    }

    TreeView_ToggleNode("demoTreeView_PDF_Viewer_Preferences");
    TreeView_SelectNode("demoTreeView_Set_Initial_Zoom_Level");
</script>

